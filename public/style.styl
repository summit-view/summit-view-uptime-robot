.summit-view-uptime-robot
    .monitor
        float left
    .red
        color rgb(233, 0, 39)
    .yellow
        color rgb(252, 198, 0)
    .green
        color rgb(141, 202, 41)
    .blue
        color rgb(59, 183, 239)
    .gray
        color rgba(white, .5)
    .pulse
        animation summit-view-uptime-robot-ring-pulse 1s ease
        animation-iteration-count infinite

@-webkit-keyframes summit-view-uptime-robot-ring-pulse
    0%
        transform scale(1, 1)
        opacity .0
    50%
        opacity .1
    100%
        transform scale(2, 2)
        opacity .0
